{
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.3.3"
    },
    "api/site.php": {
      "runtime": "vercel-php@0.3.3"
    },
    "api/plugins/notes.php": {
      "runtime": "vercel-php@0.3.3"
    },
    "api/plugins/note.php": {
      "runtime": "vercel-php@0.3.3"
    }
  },
  "routes": [
    { "src": "/(css|js|img|icons|pages)/(.*)", "dest": "public/$1/$2" },
    { "src": "/site/(.*)?", "dest": "/api/site.php" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ],
  "outputDirectory": "public",
  "public": true
}
